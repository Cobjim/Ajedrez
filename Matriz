string jugada1Pieza(){
	string pieza;
	cout<<"Jugador 1(Blanco): "<<endl;
	cout<<"Indique la posicion de la pieza que quiere mover: "<<endl;
	cin>>pieza;
	return pieza;
	
string jugada1Posicion(){
	string pos,cond;
	string error="error";
	cout<<"Escriba si desea comer o mover la pieza: "<<endl;
	cin>>cond;
	if(cond==mover){
		cout<<"Indique la posicion a la que quiere mover la pieza: "<<endl;
		cin>>pos;
		return pos;}
	else{
		if(cond==comer){
			cout<<"Indique la posicion donde esta la pieza que quiere comer: "<<endl;
			cin>>pos;
			return pos;}
		else{
			cout<<"Movimiento no valido, escriba comer si desea comer otra pieza y mover si desea mover la pieza"<<endl;
			return error;}}
	}
	
